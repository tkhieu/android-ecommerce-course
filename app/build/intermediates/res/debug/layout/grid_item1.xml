<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.glam"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_3dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="@dimen/pad_5dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="@dimen/pad_5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/on_sale_item1" />

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ally Capellino Frank Brown - Fott Shop 2014"
            android:textColor="@color/main_grey_dk1"
            android:textSize="@dimen/txt_13sp"
            android:layout_below="@+id/img"
            android:paddingLeft="@dimen/pad_10dp" 
            android:paddingRight="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_10dp" />

        <LinearLayout
            android:id="@+id/lft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl1"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/pad_10dp"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingRight="@dimen/pad_10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                
                 <TextView
                    android:id="@+id/lbl3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xyz.com"
                    android:textColor="@color/main_grey"
                    android:textSize="@dimen/txt_12sp" />

                <TextView
                    android:id="@+id/lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:text="$000-$000"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="@dimen/txt_13sp"
                    android:textStyle="bold" />

               
            </LinearLayout>

            
        </LinearLayout>
        <TextView
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_add"
                android:layout_alignRight="@+id/img"
                android:layout_alignBottom="@+id/lft"
                android:layout_marginRight="@dimen/pad_10dp"
                android:layout_marginBottom="@dimen/pad_15dp"
                 />
    </RelativeLayout>

</android.support.v7.widget.CardView><!-- From: file:/Users/georgehartley/Downloads/Android%20Studio%20Templates/Glam/app/src/main/res/layout/grid_item1.xml -->