<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ae"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_250dp"
            android:layout_marginBottom="@dimen/pad_10dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_color" />
             <LinearLayout
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pager"
            android:orientation="horizontal"
            android:padding="@dimen/pad_10dp"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/vDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad_10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pad_30dp"
            android:paddingRight="@dimen/pad_30dp" >

            <EditText
                android:id="@+id/editText1"
                style="@style/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email"
                android:hint="@string/email" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editText2"
                style="@style/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_10dp"
                android:drawableLeft="@drawable/ic_password"
                android:hint="@string/password"
                android:inputType="textPassword" >
            </EditText>

            <Button
                android:id="@+id/btnLogin"
                style="@style/btn_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_30dp"
                android:text="@string/sign_in" />

            <Button
                android:id="@+id/btnFb"
                style="@style/btn_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_20dp"
                android:background="@color/fb_blue"
                android:drawableLeft="@drawable/ic_facebook"
                android:text="@string/sign_in_fb" />

            <LinearLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_20dp" >

                <Button
                    android:id="@+id/btnForget"
                    style="@style/btn_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/forget_pwd" />

                <Button
                    android:id="@+id/btnReg"
                    style="@style/btn_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/sign_up" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>